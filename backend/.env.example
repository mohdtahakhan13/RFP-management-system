PORT=5000
MONGODB_URI=mongodb://localhost:27017/rfp_management
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (Mailtrap SMTP)
# Get your credentials from: https://mailtrap.io/inboxes
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_password
EMAIL_FROM=noreply@rfpsystem.com

# IMAP Configuration (for receiving emails)
# If not set, IMAP will use EMAIL_USER and EMAIL_PASS (works for Gmail)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
# IMAP_USER=your_email@gmail.com  # Optional: defaults to EMAIL_USER
# IMAP_PASS=your_app_password     # Optional: defaults to EMAIL_PASS

FRONTEND_URL=http://localhost:5173
